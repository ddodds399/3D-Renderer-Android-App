<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:name="http://schemas.android.com/tools"
    xmlns:item="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat"
    android:weightSum="1"
    android:id ="@+id/layoutpop">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d5fbf7"
        android:layout_weight="0.35">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="67dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Background Colour"
                    android:id="@+id/textView3"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Small Cube"
                    android:id="@+id/button"
                    android:textSize="10dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Medium Cube"
                    android:id="@+id/button2"
                    android:textSize="10dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Large Cube"
                    android:id="@+id/button3"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_weight="0.44">

                <Button
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Remove Small Cube"
                    android:id="@+id/button4"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Remove Medium Cube"
                    android:id="@+id/button5"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Remove Large Cube"
                    android:id="@+id/button6"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="99dp">

                <Spinner
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    android:layout_gravity="center_vertical"
                    android:spinnerMode="dialog"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="X-"
                    android:id="@+id/button7"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="X+"
                    android:id="@+id/button8"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Y-"
                    android:id="@+id/button9"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Y+"
                    android:id="@+id/button10"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Z-"
                    android:id="@+id/button11"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Z+"
                    android:id="@+id/button12"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2.02"
                android:weightSum="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Positions"
                    android:id="@+id/button13"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.08" />

                <Button
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:text="FOV-"
                    android:id="@+id/button14"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:text="FOV+"
                    android:id="@+id/button15"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:text="See Mesh"
                    android:id="@+id/button16"
                    android:layout_marginTop="0dp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>